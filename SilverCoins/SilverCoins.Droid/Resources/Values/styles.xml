<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/secondary</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/accent</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
  </style>


  <!-- Application theme. -->
  <style name="MyTheme" parent="MyTheme.Base">

  </style>
  <style name="Widget.CardContent" parent="android:Widget">
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="TransactionTypeTextView" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/fallback_accent</item>
    <item name="android:layout_margin">5dp</item>
  </style>

  <style name="StyledTilEditTextTheme">
    <item name="android:imeOptions">actionNext</item>
    <item name="android:singleLine">true</item>
    <item name="colorControlNormal">@color/fallback_accent</item>
    <item name="colorControlActivated">@color/white</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textSize">@dimen/styledtil_edit_text_size</item>
  </style>

  <style name="StyledTilEditText">
    <item name="android:theme">@style/StyledTilEditTextTheme</item>
  </style>
  
  <style name="error_appearance" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/fallback_error</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="TransactionAmmountStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">50sp</item>
    <item name="android:inputType">numberDecimal</item>
  </style>

  <style name="TransactionCurrencyStyle" parent="@android:style/TextAppearance.Large">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>

  <style name="TransactionTextViewsStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/fallback_accent</item>
    <item name="android:layout_marginLeft">40dp</item>
    <item name="android:layout_marginRight">40dp</item>
  </style>

  <style name="Divider">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/gray</item>
  </style>

</resources>
